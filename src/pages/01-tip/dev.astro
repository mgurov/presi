						return;
					}

					if (targetStep > this.steps) {
						console.error("beyound step", targetStep)
						return;
					}

					this.goToStep(targetStep)();
				}
			}

			return {
				animation: thisAnimation,
				goToStep,
				steps,
				onFragment,
